{
  "agentscope": {
    "enabled": true,
    "project_name": "MPEO-Enhanced",
    "init_config": {
      "project": "MPEO-Enhanced",
      "name": "MainInstance",
      "logging_path": "./data/logs",
      "logging_level": "INFO",
      "model_config": {
        "temperature": 0.2,
        "max_tokens": 2000,
        "top_p": 0.9,
        "frequency_penalty": 0.0,
        "presence_penalty": 0.0
      }
    },
    "agent_configs": {
      "planner": {
        "name": "MPEO规划师",
        "sys_prompt": "你是一个专业的AI任务规划专家，专门负责将复杂的用户需求分解为可执行的任务图。",
        "max_iters": 3,
        "enable_memory": true,
        "enable_tool_cache": true,
        "cache_ttl": 300
      },
      "executor": {
        "name": "MPEO执行器",
        "sys_prompt": "你是一个专业的任务执行智能体，负责使用工具完成具体的任务。",
        "max_iters": 2,
        "enable_memory": false,
        "enable_tool_cache": true,
        "cache_ttl": 60
      },
      "task_execution": {
        "name": "TaskExecutor",
        "sys_prompt": "你是一个专门的任务执行智能体，负责使用工具完成具体的任务。",
        "max_iters": 2,
        "enable_memory": false,
        "enable_tool_cache": false
      }
    },
    "tool_configs": {
      "mcp_adapter": {
        "enabled": true,
        "cache_results": true,
        "timeout": 30,
        "max_retries": 2,
        "refresh_interval": 300,
        "tool_selection": {
          "max_tools_per_task": 5,
          "relevance_threshold": 1,
          "enable_contextual_toolkit": true
        }
      },
      "toolkits": {
        "default": {
          "name": "默认工具包",
          "description": "包含所有可用的MCP工具",
          "auto_create": true
        },
        "contextual": {
          "name": "上下文工具包",
          "description": "根据查询动态创建的工具包",
          "auto_create": true,
          "max_tools": 10
        }
      }
    },
    "memory_configs": {
      "planner_memory": {
        "type": "InMemoryMemory",
        "max_size": 100,
        "enable_persistence": false
      },
      "executor_memory": {
        "type": "InMemoryMemory",
        "max_size": 50,
        "enable_persistence": false
      }
    },
    "pipeline_configs": {
      "parallel_execution": {
        "enabled": true,
        "max_parallel_tasks": 4,
        "timeout": 120,
        "enable_fanout": true,
        "enable_sequential": true
      },
      "error_handling": {
        "retry_on_failure": true,
        "max_retries": 2,
        "fallback_to_legacy": true,
        "continue_on_error": true
      }
    },
    "monitoring": {
      "enable_tracing": false,
      "studio_url": null,
      "log_tool_calls": true,
      "log_performance": true,
      "metrics_collection": {
        "enabled": true,
        "include_execution_time": true,
        "include_tool_usage": true,
        "include_success_rate": true
      }
    }
  },
  "model_integration": {
    "openai": {
      "enabled": true,
      "model_mapping": {
        "planner": "gpt-4",
        "executor": "gpt-3.5-turbo",
        "task_execution": "gpt-3.5-turbo",
        "default": "gpt-3.5-turbo"
      },
      "config_overrides": {
        "planner": {
          "temperature": 0.3,
          "max_tokens": 2000
        },
        "executor": {
          "temperature": 0.2,
          "max_tokens": 1500
        }
      }
    }
  },
  "compatibility": {
    "fallback_to_legacy": true,
    "legacy_mode_threshold": 3,
    "error_recovery": {
      "enable_graceful_degradation": true,
      "retry_legacy_on_failure": true,
      "log_degradation_events": true
    }
  }
}